<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.doktorumcepte.doktorumcepte.menu"
    tools:showIn="@layout/app_bar_menu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView18"
                android:layout_toEndOf="@+id/textView18"
                android:fontFamily="casual"
                android:text="@string/TCnum"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                android:text="@string/name"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView20"
                android:layout_alignEnd="@+id/textView25"
                android:fontFamily="casual"
                android:text="@string/surname"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView18"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignStart="@+id/textView11"
                android:layout_marginStart="13dp"
                android:fontFamily="casual"
                android:text="@integer/Yasnum"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="14dp"
                android:fontFamily="casual"
                android:text="@string/YaÅŸ"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                android:text="@string/TC"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:layout_toStartOf="@+id/textView25"
                app:srcCompat="@mipmap/profil" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView24"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="27dp"
                android:fontFamily="casual"
                android:text="@string/N"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView22"
                android:layout_alignBottom="@+id/textView22"
                android:layout_alignEnd="@+id/textView11"
                android:fontFamily="casual"
                android:text="@string/username"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView22"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:fontFamily="casual"
                android:text="@string/Tel"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView28"
                android:layout_alignStart="@+id/textView29"
                android:fontFamily="casual"
                android:text="@string/Telnum"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView24"
                android:layout_below="@+id/textView24"
                android:layout_marginTop="13dp"
                android:fontFamily="casual"
                android:text="@string/Mail_content"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView28"
                android:layout_alignBottom="@+id/textView28"
                android:layout_alignParentEnd="true"
                android:fontFamily="casual"
                android:text="@string/Mail"
                android:textColor="?attr/colorControlNormal"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
